/* pages/index/index.wxss */

page {
  background-color: #f3f3f3;
  height: 100%;
}

.vertical_linearlayout {
  margin-top: 82rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  height: 100%;
  /* box-sizing: border-box; 
  width: 100%;
  padding: 0;
  margin: 0; */
}

.horizontal_linearlayout {
  position: fixed;
  top: 0rpx;
  width: 100%;
  display: flex;
  height: 82rpx;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  background: #fff;
  box-shadow: 0 0.2rpx 12rpx 0 rgba(52, 52, 52, 0.1);
}

.tab_selected {
  width: 102rpx;
  margin-right: 23rpx;
  margin-left: 23rpx;
  font-size: 34rpx;
  color: #000;
  line-height: 1.12;
  font-weight: 500;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
  text-align: center;
  padding-bottom: 14rpx;
  margin-top: 20rpx;
  border-bottom: 6rpx solid #000;
}

.tab_unselected {
  width: 102rpx;
  margin-right: 23rpx;
  margin-left: 23rpx;
  font-size: 34rpx;
  color: #000;
  line-height: 1.12;
  font-weight: 300;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
  text-align: center;
  margin-top: 20rpx;
}

.content_container {
  height: 100%;
  background: #f3f3f3;
}

/* pages/index/photographer/photographer.wxss */

.outer_container {
  width: 100%;
  padding-left: 12rpx;
  padding-right: 12rpx;
  margin-top: 26rpx;
}

.container {
  height: 396rpx;
  width: 324rpx;
  float: left;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 40rpx;
}

.creation_container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  width: 324rpx;
  /* width:50%; */
  height: 396rpx;
  box-shadow: 0 0.8rpx 0 0 rgba(0, 0, 0, 0.16);
  background-color: #fff;
  float: left;
  /* margin-left: 20rpx;
  margin-right: 20rpx; */
}

.creation_image_container {
  position: relative;
  width: 100%;
  height: 260rpx;
}

.creation_image {
  position: absolute;
  width: 324rpx;
  height: 260rpx;
  z-index: 0;
}

.group_photo_image {
  position: absolute;
  height: 22.7rpx;
  width: 29.24rpx;
  z-index: 1;
  margin-top: 225.2rpx;
  margin-left: 284.8rpx;
}

.creation_inner_container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  width: 100%;
  height: 136rpx;
}

.creation_user_avatar {
  margin-top: 4rpx;
  width: 54rpx;
  height: 54rpx;
  border-radius: 27rpx;
  margin-left: 10rpx;
  margin-right: 16rpx;
}

.creation_user_name {
  font-size: 24rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
  color: #3c3c3c;
}

.creation_user_school {
  font-size: 20rpx;
  font-weight: 300;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
  color: #888;
}

.vertical_container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.horizontal_container1 {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-top: 14rpx;
}

.horizontal_container2 {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  margin-top: 11rpx;
  justify-content: space-between;
}

.rules {
  width: 302rpx;
  height: 0.4rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 11rpx;
  background-color: #b2b2b2;
}

.horizontal_container3 {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
}

.like_image {
  width: 26rpx;
  height: 24.6rpx;
  margin-left: 11rpx;
}

.like_number {
  font-size: 24rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
  margin-left: 9rpx;
  color: #b2b2b2;
}

.creation_created_at {
  font-size: 20rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
  color: #b2b2b2;
  margin-right: 10rpx;
}
