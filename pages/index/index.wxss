/* pages/index/index.wxss */

page {
  background-color: #f3f3f3;
  height: 100%;
}

.vertical_linearlayout {
  margin-top: 82rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  height: 100%;
  /* box-sizing: border-box; 
  width: 100%;
  padding: 0;
  margin: 0; */
}

.horizontal_linearlayout {
  position: fixed;
  top: 0rpx;
  width: 100%;
  display: flex;
  height: 82rpx;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  background: #fff;
  box-shadow: 0 0.2rpx 12rpx 0 rgba(52, 52, 52, 0.1);
}

.tab_selected {
  width: 102rpx;
  margin-right: 23rpx;
  margin-left: 23rpx;
  font-size: 34rpx;
  color: #000;
  line-height: 1.12;
  font-weight: 500;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
  text-align: center;
  padding-bottom: 14rpx;
  margin-top: 20rpx;
  border-bottom: 6rpx solid #000;
}

.tab_unselected {
  width: 102rpx;
  margin-right: 23rpx;
  margin-left: 23rpx;
  font-size: 34rpx;
  color: #000;
  line-height: 1.12;
  font-weight: 300;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
  text-align: center;
  margin-top: 20rpx;
}

.content_container {
  height: 100%;
  background: #f3f3f3;
}
