/* pages/index/photographer/photographer.wxss */

.outer_container {
  width: 100%;
  padding-left: 12rpx;
  padding-right: 12rpx;
  margin-top: 26rpx;
}

.container {
  width: 324rpx;
  float: left;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 40rpx;
}

.creation_container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  width: 324rpx;
  /* width:50%; */
  height: 396rpx;
  box-shadow: 0 0.8rpx 0 0 rgba(0, 0, 0, 0.16);
  background-color: #fff;
  float: left;
  /* margin-left: 20rpx;
  margin-right: 20rpx; */
}

.creation_image {
  width: 100%;
  height: 260rpx;
}

.creation_inner_container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  width: 100%;
  height: 136rpx;
}

.creation_user_avatar {
  margin-top: 4rpx;
  width: 54rpx;
  height: 54rpx;
  border-radius: 27rpx;
  margin-left: 10rpx;
  margin-right: 16rpx;
}

.creation_user_name {
  font-size: 24rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
  color: #3c3c3c;
}

.creation_user_school {
  font-size: 20rpx;
  font-weight: 300;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
  color: #888;
}

.vertical_container {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.horizontal_container1 {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-top: 14rpx;
}

.horizontal_container2 {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  margin-top: 11rpx;
  justify-content: space-between;
}

.rules {
  width: 302rpx;
  height: 0.4rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 11rpx;
  background-color: #b2b2b2;
}

.horizontal_container3 {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
}

.like_image {
  width: 26rpx;
  height: 24.6rpx;
  margin-left: 11rpx;
}

.like_number {
  font-size: 24rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
  margin-left: 9rpx;
  color: #b2b2b2;
}

.creation_created_at {
  font-size: 20rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: normal;
  color: #b2b2b2;
  margin-right: 10rpx;
}
